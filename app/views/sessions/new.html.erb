<div class="flex min-h-screen items-center justify-center p-4 bg-gray-50">
  <div class="w-full max-w-md space-y-8">

    <div class="text-center">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Welcome back</h1>
      <p class="mt-2 text-sm text-gray-500">Sign in to continue to your account.</p>
    </div>

    <div class="space-y-6 rounded-xl bg-white p-8 shadow-2xl border border-gray-200">

      <% if flash[:alert] %>
        <!-- Display error message set by SessionsController#create -->
        <div class="p-3 bg-red-100 border border-red-400 text-red-700 rounded-lg text-sm">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <!-- This form targets the POST /login route, which maps to SessionsController#create -->
      <%= form_with(url: login_path, local: true, class: "space-y-6") do |form| %>

        <!-- Email Field -->
        <div>
          <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email,
                                 required: true,
                                 autocomplete: "email",
                                 placeholder: "you@example.com",
                                 class: "block w-full appearance-none rounded-md border border-gray-300 bg-gray-50 px-3 py-2 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm text-gray-900" %>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password,
                                    required: true,
                                    autocomplete: "current-password",
                                    placeholder: "••••••••",
                                    class: "block w-full appearance-none rounded-md border border-gray-300 bg-gray-50 px-3 py-2 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm text-gray-900" %>
          </div>
        </div>

        <!-- Checkbox and Forgot Password Link -->
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input id="remember-me" name="remember_me" type="checkbox" class="h-4 w-4 rounded border-gray-300 bg-gray-50 text-indigo-600 focus:ring-indigo-500 form-checkbox">
            <label for="remember-me" class="ml-2 block text-sm text-gray-700">Remember me</label>
          </div>
          <div class="text-sm">
            <%= link_to "Forgot password?", "#", class: "font-medium text-indigo-600 hover:text-indigo-500" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit "Log In",
                          class: "flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-white transition duration-200 cursor-pointer" %>
        </div>
      <% end %>

      <!-- Separator -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="bg-white px-2 text-gray-500">Or continue with</span>
        </div>
      </div>

      <!-- Social Login Buttons (Placeholders) -->
      <div class="grid grid-cols-2 gap-3">
        <button class="inline-flex w-full justify-center items-center gap-2 rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 hover:bg-gray-50" type="button">
          <svg aria-hidden="true" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09Z"></path><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23Z"></path><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84Z"></path><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53Z"></path></svg>
          <span class="text-sm font-medium">Google</span>
        </button>
        <button class="inline-flex w-full justify-center items-center gap-2 rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 hover:bg-gray-50" type="button">
          <svg aria-hidden="true" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.012 6.841C10.741 6.841 9.89 7.844 9.89 9.15c0 1.314.931 2.348 2.152 2.348.108 0 .225-.01.342-.02a.84.84 0 0 1-.03-.225c0-1.635 1.3-2.955 2.94-2.955.15 0 .3.01.43.04-.04-.1-.08-.18-.12-.27-.51-.95-1.43-1.545-2.58-1.545zM15.54 13.93c-1.398.24-2.428 1.168-2.428 2.508 0 1.577 1.25 2.608 2.5 2.608 1.39 0 2.27-1.11 2.28-2.578-.01-1.63-1.38-2.46-2.352-2.538z"></path><path d="M20.91 14.97c-.015.01-.84.495-2.025.495-1.185 0-1.83-.495-2.595-.495-.78 0-1.53.51-2.28.51-.765 0-1.32-.42-2.115-.42s-1.5.495-2.28.495c-.78 0-1.41-.495-2.19-.495C6.075 14.97 5 15.6 5 17.07c0 2.25 1.74 3.93 3.51 3.93.75 0 1.485-.375 2.25-.375.75 0 1.335.375 2.25.375s1.605-.48 2.295-.48c.675 0 1.29.48 2.055.48 1.83 0 3.555-1.74 3.555-3.96-.015-1.29-.885-2.04-2.25-2.1z"></path></svg>
          <span class="text-sm font-medium">Apple</span>
        </button>
      </div>
    </div>

    <!-- Sign Up Link -->
    <p class="text-center text-sm text-gray-500">
      Don't have an account?
      <%= link_to "Sign Up", signup_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
