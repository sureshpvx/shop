<div class="flex min-h-screen items-center justify-center p-4 bg-gray-50">
  <div class="w-full max-w-md space-y-8">

    <div class="text-center">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Create an Account</h1>
      <p class="mt-2 text-sm text-gray-500">Join our community and start your journey.</p>
    </div>

    <div class="space-y-6 rounded-xl bg-white p-8 shadow-2xl border border-gray-200">

      <% if @user.errors.any? %>
        <!-- Styled error display using Tailwind -->
        <div class="p-4 rounded-lg bg-red-50 border border-red-300">
          <h2 class="text-lg font-semibold text-red-800">
            <%= pluralize(@user.errors.count, "error") %> prohibited this account from being created:
          </h2>
          <ul class="mt-2 text-sm text-red-700 list-disc pl-5 space-y-1">
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- The form_with helper uses POST /users, which maps to UsersController#create -->
      <%= form_with(model: @user, url: users_path, class: "space-y-6") do |form| %>

        <!-- Full Name Field -->
        <div>
          <%= form.label :name, "Full Name", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :name,
                                required: true,
                                autocomplete: "name",
                                class: "block w-full appearance-none rounded-md border border-gray-300 bg-gray-50 px-3 py-2 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm text-gray-900" %>
          </div>
        </div>

        <!-- Email Address Field -->
        <div>
          <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email,
                                 required: true,
                                 autocomplete: "email",
                                 class: "block w-full appearance-none rounded-md border border-gray-300 bg-gray-50 px-3 py-2 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm text-gray-900" %>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password,
                                    required: true,
                                    autocomplete: "new-password",
                                    class: "block w-full appearance-none rounded-md border border-gray-300 bg-gray-50 px-3 py-2 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm text-gray-900" %>
          </div>
          <p class="text-xs text-gray-500 mt-1">Password must be at least 6 characters long.</p>
        </div>

        <!-- Password Confirmation Field -->
        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password_confirmation,
                                    required: true,
                                    autocomplete: "new-password",
                                    class: "block w-full appearance-none rounded-md border border-gray-300 bg-gray-50 px-3 py-2 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm text-gray-900" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit "Sign Up",
                          class: "flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-white transition duration-200 cursor-pointer" %>
        </div>
      <% end %>

      <!-- Login Link -->
      <p class="text-center text-sm text-gray-500 pt-4 border-t border-gray-200">
        Already have an account?
        <%= link_to "Log In", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>
  </div>
</div>
